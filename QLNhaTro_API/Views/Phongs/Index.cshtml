@model IEnumerable<QLNhaTro_API.Models.Phong>
@using System.Globalization
@{
    ViewBag.Title = "Phòng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<p style="text-align:right;margin:10px;">
    <a href="@Url.Action("Create","Phongs")" class="btn btn-primary">Tạo mới</a>
</p>
<div class="row mx-3">
    <div class="container col-12 border border-1 shadow rounded rounded-3">
        <div class="row my-3">
            @foreach (var item in Model)
            {
                <div class="col-md-2 col-12">
                    @if (item.TrangThai == 1)
                    {
                        <div class="card" style="opacity:0.4">
                            <div class="card-body text-center">
                                <h1 class="card-title">@Html.DisplayFor(modelItem => item.TenPhong)</h1>
                                <div>
                                    @if (item.TrangThai == 1)
                                    {<i class="fas fa-check-circle text-success"></i><b><span style="color:green; padding: 5px">ĐÃ CÓ NGƯỜI</span></b>}
                                    else if (item.TrangThai == 0)
                                    {<i class="fas fa-times-circle text-danger"></i><b><span style="color:red; padding: 5px">PHÒNG ĐANG TRỐNG</span></b>}
                                    else
                                    {<i class="fas fa-tools text-info"></i><b><span style="color: #17A2B8; padding: 5px">ĐANG SỬA CHỮA</span></b>}
                                    <hr />
                                    <div>
                                        <a data-toggle="tooltip" data-placement="bottom" title="Sửa" class="btn btn-sm btn-success" href="@Url.Action("Edit","Phongs",new { @id = item.IdPhong })">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a data-toggle="tooltip" data-placement="bottom" title="Xoá" class="btn btn-sm btn-danger" href="@Url.Action("Delete","Phongs",new { @id = item.IdPhong })">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>}
                    else
                    {
                        <div class="card">
                            <div class="card-body text-center">
                                <h1 class="card-title">@Html.DisplayFor(modelItem => item.TenPhong)</h1>
                                <div>
                                    @if (item.TrangThai == 1)
                                    {<i class="fas fa-check-circle text-success"></i><b><span style="color:green; padding: 5px">ĐÃ CÓ NGƯỜI</span></b>}
                                    else if (item.TrangThai == 0)
                                    {<i class="fas fa-times-circle text-danger"></i><b><span style="color:red; padding: 5px">PHÒNG ĐANG TRỐNG</span></b>}
                                    else
                                    {<i class="fas fa-tools text-info"></i><b><span style="color: #17A2B8; padding: 5px">ĐANG SỬA CHỮA</span></b>}
                                    <hr />
                                    <div>
                                        <a data-toggle="tooltip" data-placement="bottom" title="Sửa" class="btn btn-sm btn-success" href="@Url.Action("Edit","Phongs",new { @id = item.IdPhong })">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a data-toggle="tooltip" data-placement="bottom" title="Xoá" class="btn btn-sm btn-danger" href="@Url.Action("Delete","Phongs",new { @id = item.IdPhong })">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>}
                </div>}
        </div>
    </div>
</div>


<script>
    jQuery(document).ready(function () {
        $('#myTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.22/i18n/Vietnamese.json"
            }
        });
    });
</script>