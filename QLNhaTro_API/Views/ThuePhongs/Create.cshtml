@model QLNhaTro_API.Models.ThuePhong

@{
    ViewBag.Title = "Thêm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm("Create", "ThuePhongs", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <p style="text-align:right;margin:10px;">
        <a href="@Url.Action("Index","ThuePhongs")" class="btn btn-primary">QUAY LẠI</a>
    </p>
    <div class="container my-3 rounded rounded-3 border border-2" style="width:40%;">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-center my-3">TẠO HỢP ĐỒNG</h1>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <h3 class="form-label">Khách Hàng</h3>
                    <div class="col-md-12">
                        @Html.DropDownList("IdKhachHang", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdKhachHang, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <h3 class="form-label"> Thuê Phòng</h3>
                    <div class="col-md-12">
                        @Html.DropDownList("IdPhong", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdPhong, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <h3 class="form-label">Tiền Đặt Cọc</h3>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.TienDatCoc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TienDatCoc, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <h3 class="form-label">Ngày Bắt Đầu</h3>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.NgayBatDau, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        @Html.ValidationMessageFor(model => model.NgayBatDau, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <h3 class="form-label">Ngày Kết Thúc</h3>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.NgayKetThuc, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        @Html.ValidationMessageFor(model => model.NgayKetThuc, "", new { @class = "text-danger" })
                    </div>
                </div>
                @if (ViewBag.Error1 != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.Error1
                    </div>
                }
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.Error
                    </div>
                }
                <div class="form-group">
                    <h3 class="form-label">File Mềm Hợp Đồng</h3>
                    <div class="col-md-12">
                        <input title="Thêm file" type="file" name="fileUpload" id="fileUpload" onchange="loadFile(event)" />
                    </div>
                </div>

                <div class="mb-2 text-center">
                    <input type="submit" value="TẠO" class="btn btn-success form-control" />
                </div>
            </div>
        </div>
    </div>
}